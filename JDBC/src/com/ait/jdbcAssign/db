INSERT INTO Attacked_Organization VALUES ('Amazon', 'IT', 613300, 'Seatle, US', 177900);
INSERT INTO Attacked_Organization VALUES ('Foxconn', 'Electronics', 803126, 'New Taipei City, Taiwan', 15800);
INSERT INTO Attacked_Organization VALUES ('Huawei', 'Mobile Phones', 8900, 'Shenzhen', 1000);
INSERT INTO Attacked_Organization VALUES ('Sony', 'Electronics', 11700, 'Tokyo, Japan', 7700);

CREATE TABLE Hacker(
	Hacker_Name VARCHAR(50) PRIMARY KEY,
    Size INTEGER,
	Location VARCHAR(20)
	)engine=innodb charset=utf8;
	
INSERT INTO Hacker VALUES ('Anonymous', 200, 'US');
INSERT INTO Hacker VALUES ('Cicada', 50, 'China');
INSERT INTO Hacker VALUES ('DCLeaks', 30, 'US');
INSERT INTO Hacker VALUES ('Derp', 15, 'Russia');
INSERT INTO Hacker VALUES ('Ghost Squad Hackers', 44, 'GBR');
INSERT INTO Hacker VALUES ('Hackweist', 100, 'Israel');

CREATE TABLE Organizations_discovered(
	Discov_Org_Name VARCHAR(50) PRIMARY KEY,
    Size_Of_Organization INTEGER,
	Location VARCHAR(20)
	)engine=innodb charset=utf8;

INSERT INTO Organizations_discovered VALUES ('ADF Solutions', 1000, 'US');
INSERT INTO Organizations_discovered VALUES ('AhnLab, Inc', 500, 'Germany');
INSERT INTO Organizations_discovered VALUES ('HackerOne', 33, 'GBR');
INSERT INTO Organizations_discovered VALUES ('Clavister', 58, 'Ireland');
INSERT INTO Organizations_discovered VALUES ('SonicWall', 90, 'China');

CREATE TABLE Attacks(
    Attack_Name VARCHAR(50) PRIMARY KEY,
    TypeOfAttack VARCHAR(20),
    Description VARCHAR(255)
    )engine=innodb charset=utf8;
    
INSERT INTO Attacks VALUES ('Phishing', 'Email', 'somedescription');
INSERT INTO Attacks VALUES ('Password Attack', 'WEB', 'somedescription');
INSERT INTO Attacks VALUES ('DoS', 'Network', 'somedescription');
INSERT INTO Attacks VALUES ('Malware', 'Email', 'somedescription');

CREATE TABLE CyberAttack_Log(
	Cyber_ID INTEGER AUTO_INCREMENT PRIMARY KEY,
	Attack_ID VARCHAR(50),
	Disc_Org_ID VARCHAR(50),
	Hacker_ID VARCHAR(50),
	Attacked_Org_ID VARCHAR(50),
	FOREIGN KEY(Disc_Org_ID) REFERENCES Organizations_discovered(Discov_Org_Name),
    FOREIGN KEY(Hacker_ID) REFERENCES Hacker(Hacker_Name),
    FOREIGN KEY(Attacked_Org_ID) REFERENCES Attacked_Organization(Attack_Org_Name),
    FOREIGN KEY(Attack_ID) REFERENCES Attacks(Attack_Name),
	Date  DATE NOT NULL,
	How_Attack_Delivered VARCHAR(100),
	Damage DECIMAL
	)engine=innodb charset=utf8;
	
INSERT INTO CyberAttack_Log VALUES (null, 'Phishing', 'ADF Solutions', 'Anonymous', 'Apple', now(), 'Sql Injection', 23000);
INSERT INTO CyberAttack_Log VALUES (null, 'DoS', 'HackerOne', 'Cicada', 'Samsung', '2019-09-13', 'XSS', 55000);
